{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>
    <div class="col-md-12">
        <div class="card-user container">

                <form action="{{ path('verif_registration') }}" method="post">

                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Prénom</label> <input type="text" class="form-control" name="prenom"  placeholder="Prénom"
