{% block body %}
    <h1>Login</h1>

    <div class="col-md-12">
    <div class="card-user container">
    <form action="{{ path('login') }}" method="post">
        <div  style=" justify-content: center ; align-items: center">

            <div class="col-md-12 pr-1 ">
                <div class="form-group ">
                    <label for="username">Email:</label>
                    <input type="text" class="form-control"  name="_username" value="{{ last_username }}"
                                                placeholder="Email"
                                                required="required">
                </div>
            </div>
            <div class="col-md-12 pr-1">
                <div class="form-group ">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control"   id="password" name="_password"
                           placeholder="Email"
                           required="required">
                </div>
            </div>
        </div>



        {# If you want to control the URL the user is redirected to on success

        #}

        <input type="hidden" name="livre_index" value="/livre"/>
        {% if error %}
            <div style="margin-left:30px"><p style=" color:red; " >{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
        {% endif %}

        <div class="row">
            <div class="update ml-auto mr-auto">
                <button type="submit" class="btn btn-primary btn-round">login
                </button>
            </div>
        </div>
    </form>
    </div>
    </div>

